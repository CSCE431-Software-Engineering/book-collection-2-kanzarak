<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(book.price) %>
  </p>

  <p>
    <strong>Publish Date:</strong>
    <%= l(book.published_date) %>
  </p>

</div>
